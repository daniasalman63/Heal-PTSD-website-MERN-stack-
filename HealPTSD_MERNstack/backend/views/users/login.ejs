    <h1>Login</h1>
    <img src="./img1.png" alt="" height="100px" width="100px">

    <% if(typeof message !=='undefined' ){ %>
        <h4>
            <%= message %>
        </h4>
        <% } %>
            <form action="/login" method="post">
                <label for="email">Email</label>
