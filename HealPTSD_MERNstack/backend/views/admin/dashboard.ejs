<h1>Dashboard</h1>

<table width="70%">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Mental Health History</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Do they take therapy?</th>
        <th>Contact</th>
        <th>Verified</th>
    </tr>

    <% 
        if(users.length > 0){
            for(let i =0 ; i<users.length; i++){
                %>
                    <tr>
                        <td><%= users[i].firstName %></td>
                        <td><%= users[i].lastName %></td>
                        <td><%= users[i].email %></td>
                        <td><%= users[i].mentalHealthHistory %></td>
                        <td><%= users[i].age %></td>
                        <td><%= users[i].gender %></td>
                        <td><%= users[i].therapyOption %></td>
                        <td><%= users[i].contact %></td>
                        <td><%
                            if (users[i].isVerified === 0){
                                %>
                                    <p>Not Verified</p>
                                <%
                            }
                            else{
                                %>
                                    <p>Verified</p>
                                <%
                            } %></td>
                    </tr>
                <%
            }
        }else{
            %>
                <tr>
                    <td colspan="5">Users Not Found</td>
                </tr>
            <%
        }
    %>
</table>

